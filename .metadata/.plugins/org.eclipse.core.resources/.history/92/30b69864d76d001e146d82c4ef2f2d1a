package Day11;

public class Day11 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int sum = 0;
		for(int i = 1; i<=100; i++) {
			if(i%2 != 0) {
				continue;
			}
			sum = sum + i;

		}
		System.out.println(sum);
	}

}

class DAy11break {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int a = 0;
		while(true) {
			int val = (int)(Math.random()*50+1);
			if(val == 30) {
				System.out.println("종료");
				break;
			}
			a += val ;
			System.out.println(val + ", ");
		}
		System.out.println();
		System.out.println(a);

	}
}
